<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Weighter.Features.Registration.WelcomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:copyRegisters="clr-namespace:Weighter.Resources.Copy_Registers"
    xmlns:registration="clr-namespace:Weighter.Features.Registration"
    x:DataType="registration:WelcomePageViewModel">
    <Grid>
        <StackLayout VerticalOptions="End">
            <Label Text="{x:Static copyRegisters:RegistrationRegister.REG_001}" />
            <Label Text="{x:Static copyRegisters:RegistrationRegister.REG_002}" />
            <Button Command="{Binding ContinueCommand}" Text="{x:Static copyRegisters:RegistrationRegister.REG_003}" />
        </StackLayout>
    </Grid>
</ContentPage>
